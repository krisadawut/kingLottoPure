<%- include template/library %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/ckeditor4/ckeditor.js"></script>
    <link rel='stylesheet' href='/stylesheets/admin_news.css' />
    <title><%= title %></title>
      
  </head>
  <body>
    <div id="main-wrapper">
      <header><%- include template/header %></header>
      <aside><%- include template/aside %></aside>
      <footer><%- include template/footer %></footer>
      <article id="article-nav">
          <ul>
              <li><i class="fa fa-home" aria-hidden="true"></i></li>
              <li><i class="fa fa-chevron-right" style="font-size: 10px;"></i></li>
              <li><%= title %></li>
          </ul>
      </article>
      <article id="article-body">
        <!-- Title --> 
        <div id="menu-title"> <%= text  %> </div> <br>
        <!-- Topic --> 
        <div><i class="fa fa-chevron-circle-right" style="font-size: 15px;"></i> แก้ไขข่าวประกาศ </div> <br>

        <!-- Content --> 
        <div style="color: black;" >
          <form action="admin_news/controlnews" method="POST">
              <label style="color: white;">News ID: </label> <input  type="text" name="nid" value="<%= News[0].NewsID %>">
              <textarea name="news_detail" ></textarea>
              <br>
              <input type="submit" name="btn" value="Add">
              <input type="submit" name="btn" value="Edit">
              <input type="submit" name="btn" value="Delete">
              <script>
                CKEDITOR.replace( 'news_detail' ); 
              </script>
          </form>
        </div>
        
      </article>
      
      
    </div>
  </body>
</html>
<%- include template/library %>