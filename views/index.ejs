<%- include template/library %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/dtable.css' />
    <link rel='stylesheet' href='/stylesheets/news.css' />
    
    <title><%= title %></title>
      
  </head>
  <body>
    <div id="main-wrapper">
      <header><%- include template/header %></header>
      <aside><%- include template/aside %></aside>
      <footer><%- include template/footer %></footer>
      <article id="article-nav">
          <ul>
              <li><i class="fa fa-home" aria-hidden="true"></i></li>
              <li><i class="fa fa-chevron-right" style="font-size: 10px;"></i></li>
              <li><%= title %></li>
          </ul>
      </article>
      <article id="article-body">
        <!-- Title --> 
        <div id="menu-title"> <%= text +' '+ Users[0].UserName  %> </div> <br>
              
        <div class="noti-section">
          <div style="font-size: 20px;">
            <i class="fa fa-exclamation-triangle" ></i> 
            เรียนท่านที่ต้องการ หุ้น หรือ เก็บของ
          </div>
          <div style="font-size: 15px;">
            กรุณาตั้งจำนวนการรับของต่อตัวในหน้า 
            ตั้งค่าการรับของ เพื่อกำหนดว่าท่านจะรับของสูงสุดต่อตัวตัวละเท่าไร 
            หากไม่มีการตั้ง ระบบจะถือว่าท่านไม่ต้องการสู้
          </div>
        </div>
        <br>
        <div style="font-size: 20px;">
          <i class="fa fa-chevron-circle-right"></i>
          ข่าวประกาศ
        </div>
        <br>

        <div class="news-content">
          <div class="news-show">
            <table style="color: white;">
              <tr><th style="width: 100px; height: 20px;">ID</th><th>News</th></tr>
              <% News.forEach(function(i) { %>
                <tr>
                  <td style="text-align: center; vertical-align: middle; font-size: 15px;"><%= i.NewsID %></td>
                  <td><%- i.News_Detail %></td>
                </tr>
              <% }); %>
            </table>

          </div>
        </div>
      </article>

    </div>
  </body>
</html>
<%- include template/library %>